<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#F4F3F3"
    tools:context=".MainMenu">

    <View
        android:id="@+id/menu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#E0E0E0"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="327dp"
        android:layout_height="87dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="43dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_no_background"/>

    <Button
        android:id="@+id/parkBtn"
        android:layout_width="315dp"
        android:layout_height="96dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="162dp"
        android:text="Park"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/scanBtn"
        android:layout_width="315dp"
        android:layout_height="96dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="289dp"
        android:drawableLeft="@drawable/qr_code"
        android:text="Scan Qr"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/statisticsBtn"
        android:layout_width="315dp"
        android:layout_height="96dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="421dp"
        android:text="Statistics"
        android:elevation="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/profileBtn"
        android:layout_width="315dp"
        android:layout_height="96dp"
        android:elevation="10dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="551dp"
        android:text="Profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>